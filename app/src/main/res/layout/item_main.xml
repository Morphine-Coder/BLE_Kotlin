<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="kr.intin.ble_kotlin.viewmodel.MainViewModel" />
        <variable
            name="data"
            type="android.bluetooth.le.ScanResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:id="@+id/item">

        <TextView
            android:id="@+id/tv_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{String.valueOf(data.rssi)}"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:text="-77" />

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{data.device.toString()}"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:text="12:12:12:12" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{data.device.name}"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:text="Unknown" />

    </LinearLayout>
</layout>